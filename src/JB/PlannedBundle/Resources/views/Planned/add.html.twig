{% extends "JBPlannedBundle::layout.html.twig" %}

{% block title %}{{ parent() }} - Ajouter un tweet{% endblock %}

{% block content %}
    <h2>Ajouter un tweet plannifié</h2>
    <div class="well">
        {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}

        {# Les erreurs générales du formulaire. #}
        {{ form_errors(form) }}

        <div class="form-group">
            {# Génération du label. #}
            {{ form_label(form.message, "Message", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}

            {# Affichage des erreurs pour ce champ précis. #}
            {{ form_errors(form.message) }}

            <div class="col-sm-4">
                {# Génération de l'input. #}
                {{ form_widget(form.message, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>

        {# Idem pour un autre champ. #}
        <div class="form-group">
            {{ form_label(form.image, "Image", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
            {{ form_errors(form.image) }}
            <div class="col-sm-4">
                {{ form_widget(form.image, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>
        {# Idem pour un autre champ. #}
        <div class="form-group">
            {{ form_label(form.receiver, "Envoyer à", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
            {{ form_errors(form.receiver) }}
            <div class="col-sm-4">
                {{ form_widget(form.receiver, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>
        <div class="form-group">
            {{ form_label(form.sendingDate, "Date d'envoi", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
            {{ form_errors(form.sendingDate) }}
            <div class="col-sm-8">
                <div class="input-group">
                    {{ form_widget(form.sendingDate.date.year, {'attr': {'class': ''}}) }}
                    {{ form_widget(form.sendingDate.date.month, {'attr': {'class': ''}}) }}
                    {{ form_widget(form.sendingDate.date.day, {'attr': {'class': ''}}) }}
                    {{ form_widget(form.sendingDate.time.hour, {'attr': {'class': ''}}) }}
                    {{ form_widget(form.sendingDate.time.minute, {'attr': {'class': ''}}) }}
                </div>
            </div>
        </div>
        <div class="form-group">
            {# Pour le bouton, pas de label ni d'erreur, on affiche juste le widget #}
            {{ form_widget(form.valider, {'attr': {'class': 'btn btn-primary'}}) }}
        </div>

        {# Génération automatique des champs pas encore écrits.
           Dans cet exemple, ce serait le champ CSRF (géré automatiquement par Symfony !)
           et tous les champs cachés (type « hidden »). #}
        {{ form_rest(form) }}

        {# Fermeture de la balise <form> du formulaire HTML #}
        {{ form_end(form) }}
    </div>

{% endblock %}